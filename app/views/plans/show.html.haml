- title "Show Plans"
.plan
  =link_to image_tag(@plan.image_url, :class => 'img-polaroid schedule-thumb plan-medium') if @plan.image_url.present?
  %h1= @plan.title

  .pull-right
    = link_to "Edit", edit_plan_path(@plan)
    |
    = link_to "Destroy", @plan, :confirm => 'Are you sure?', :method => :delete

.content-section
  .header Motivation

  %p
    %strong Wheel of life:
    %span.sub-text= Plan::VALID_WHEEL_OF_LIFE_TYPES[@plan.wheel_of_life]
  %p
    %strong Roles:
    %span.sub-text= @plan.roles
  %p
    %strong Vision:
    %span.sub-text= @plan.vision
  %p
    %strong Purpose:
    %span.sub-text= @plan.purpose
  %p
    %strong If Achieved:
    %span.sub-text= @plan.if_achieved
  %p
    %strong If Not Achieved:
    %span.sub-text= @plan.if_not_achieved

  .header Strategy
  = render 'focus_areas/list', :plan => @plan


.content-section
  .header
    Achievements

  .achievements
    - @plan.tasks.each do |task|
      - task.achievements.each do |ta|
        .achievement
          .well
            .pull-left
              = icon_for(:smile)
              = Achievement::VALID_STATE_TYPES[ta.state_id]
            .pull-right
              = ta.achieved_date.strftime('%D')
            .clearfix
            %h5= ta.task.description
            - if ta.reason.present?
              .well= ta.reason

            - if ta.lessons.present?
              .well
                - ta.lessons.each do |lesson|
                  .label Lesson learned:
                  .lesson= "#{lesson.category}: #{lesson.note}"
.clearfix
.content-section
  .header
    Milestones
  = render @plan.milestones if @plan.milestones.present?
  = render 'layouts/empty', message: 'There is no milestones setup yet' if @plan.milestones.empty?
  = link_to 'Add Milestone', new_plan_milestone_path(@plan), class: 'btn btn-success'
