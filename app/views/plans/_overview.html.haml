- if user.plans.present?
  %h2.text-center #{you_or_name(user, current_user, 'have')} #{pluralize(user.plans.count, 'Goal')}
  - user.plans.each do |plan|
    - if can?(:read, plan)
      = render 'plans/status', plan: plan
      %hr
- else
  %h2.text-center #{you_or_name(user, current_user, 'don\'t')} have a goal yet
