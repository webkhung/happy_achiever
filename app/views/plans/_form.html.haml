= simple_form_for(@plan, html: { class: 'form-horizontal' }) do |f|
  = f.error_messages
  .control-group
    = f.label 'Wheel of life', class: 'control-label'
    .controls= collection_select(:plan, :wheel_of_life, Plan::VALID_WHEEL_OF_LIFE_TYPES, :first, :last, :prompt => true)
  .control-group
    = f.label 'Image Url', class: 'control-label'
    .controls= f.input :image_url, label: false
  .control-group
    = f.label 'Title', class: 'control-label'
    .controls= f.input :title, label: false
  .control-group
    = f.label 'Role', class: 'control-label'
    .controls= f.input :roles, label: false
  .control-group
    = f.label 'Vision', class: 'control-label'
    .controls= f.input :vision, label: false
  .control-group
    = f.label 'Purpose', class: 'control-label'
    .controls= f.input :purpose, as: :text, :input_html => { :rows => 3 }, label: false
  .control-group
    = f.label 'If Achieved', class: 'control-label'
    .controls= f.input :if_achieved, as: :text, :input_html => { :rows => 3 }, label: false
  .control-group
    = f.label 'If Not Achieved', class: 'control-label'
    .controls= f.input :if_not_achieved, as: :text, :input_html => { :rows => 3 }, label: false
  .control-group
    .controls= f.submit class: 'btn btn-success'
