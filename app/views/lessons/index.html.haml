- title "Lessons"

%table
  %tr
    %th Category
    %th Note
  - for lesson in @lessons
    %tr
      %td= lesson.category
      %td= lesson.note
      %td= link_to 'Show', lesson
      %td= link_to 'Edit', edit_lesson_path(lesson)
      %td= link_to 'Destroy', lesson, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Lesson", new_lesson_path
