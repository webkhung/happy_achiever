.row
  .span12
    .progressbar{ style: 'position:relative;font-size:12px' }
      - level = Achievement.level

      %div{ style: 'position:absolute;top:0px;left:10px' }
        Level #{level[0]}
        %span.muted - #{pluralize(level[2] - level[3], 'more achievement')} to the next level, YOU CAN DO IT!

      %div{ style: 'position:absolute;top:0px;right:10px' }
        Level #{level[0]+1}

.row
  .span12
    .well
      = render 'achievements/new_state_achievement'

.row
  .span12
    .page-header.text-center
      %h2 Your have #{pluralize(@plans.count, 'Goal')}!
= render 'plans/overview', :plans => @plans

%hr

.row
  .span4
    .list-no-style.view-schedule
      %h3 2 Days Schedule
      = render :partial => 'schedules/day_range', :locals => {:days => 3, :schedules => Schedule.all, :mode => 'view'}
  .span8
    = render 'achievements/level'
    %hr
    %h3 Recent Achievements
    #chart-container
      #chart-hover-text
      = high_chart("achievement_chart", @chart)
    = render 'achievements/count'

