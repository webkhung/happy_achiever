#joined_team_modal.modal.hide.fade
  .modal-header
    %button.close{ type: 'button', data: { dismiss: 'modal' } } &times;
    %h1= icon_for(:trophy, 'Great Job!')
  .modal-body
    %h3 Joined team!
    %p.text-center
      = image_tag 'team.jpg', size: '300x200'
    %h3 You have a team to support you!!!!!
    %ul
      %li <strong>Yea!</strong> good stuff!
  .modal-footer
    = link_to 'Done!', '#', data: { dismiss: 'modal' }

:javascript
  window.onLoadModal = '#joined_team_modal';
