#joined_team_modal.modal.hide.fade
  .modal-header
    %button.close{ type: 'button', data: { dismiss: 'modal' } } &times;
    %h1= icon_for(:group, 'Thank You For Helping!')
  .modal-body
    %h2.text-center You are now in #{params[:name]}'s team!
    %p.text-center
      = image_tag 'team.jpg', size: '300x200'
    %ul
      %li <strong>Accountability</strong> #{params[:name]}'s may ask you to hold him/her accountable on certain things.  Please support him/her!
      %li <strong>Add #{params[:name]} to your team</strong> If you also want #{params[:name]} to hold you accountable or simply want to share more information to him/her, please add him/her to your team.
  .modal-footer
    = link_to 'Close', '#', data: { dismiss: 'modal' }

:javascript
  window.onLoadModal = '#joined_team_modal';


