#add_tasks_modal.modal.hide.fade
  .modal-header
    %button.close{ type: 'button', data: { dismiss: 'modal' } } &times;
    %h1 Great!

  .modal-body
    .text-center
      %h2 You have created a task!
      .well Now you can create another task
      %h2 OR
      .well
        Click on
        .orange Edit Schedule
        to start scheduling your week

  .modal-footer
    = link_to 'Continue!', '#', data: { dismiss: 'modal' }

:javascript
  window.onLoadModal = '#add_tasks_modal';
