#focus-area-list
  .control-group= link_to 'Add New Focus Area', new_plan_focus_area_path(plan, step: params[:step]), class: 'btn btn-success', id: 'new-focus-area-button'
  - plan.focus_areas.each_with_index do |fa, index|
    .well
      .numberCircle
        = "#{index + 1}"
      .focus-area-title
        = fa.title
        = link_to icon_for(:edit), edit_focus_area_path(fa)
        = link_to icon_for(:remove), fa, confirm: 'Are you sure?', method: :delete
      .clear-both
      .tasks
        %p Tasks included in "#{fa.title}" focus area:
        %ul.unstyled
          - fa.tasks.each do |task|
            %li
              = link_to task.description, edit_focus_area_task_path(fa, task)
              = link_to icon_for(:remove), task, confirm: 'Are you sure?', method: :delete
          %li= link_to 'Add a New Task', new_focus_area_task_path(fa, step: params[:step]), class: 'btn btn-info'
