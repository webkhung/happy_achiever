%dl.dl-horizontal
  %dt Description
  %dd= link_to milestone.name, edit_milestone_path(milestone)
  %dt Status
  %dd= status_icon(milestone.status)
  %dt Target date
  %dd= "#{milestone.target.strftime('%D')} (#{milestone.from_now})"
  %dt
  %dd
    = link_to icon_for(:edit), edit_milestone_path(milestone)
    = link_to icon_for(:remove), milestone, method: :delete
