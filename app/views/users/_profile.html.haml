.row
  .span2
    = render 'users/stats', user: @user
    = render 'team_memberships/teammates', user: @user
    = render 'accountables/team_hold_me_acccountable', user: @user
    = render 'team_memberships/teams_supporting', user: @user
    = render 'accountables/i_hold_my_team_accountable', user: @user
    = render 'accountables/add_accountable', user: @user

  .span7{ style: "background-image: url('/assets/background2.png'); background-repeat: repeat-y; background-color: #fcfcfc;" }
    %div{ style: 'padding: 0 15px;border-left:solid 1px #eeeeee;border-right:solid 1px #eeeeee' }
      = render 'achievements/new_state_achievement' if current_user == @user
      = render 'schedules/today_schedule', user: @user if current_user == @user
      = render 'plans/overview', user: @user
      = render 'plans/add_new_plan' if current_user == @user

  .span3
    - if @activities.present?
      #activities-container
        #activities
          = render_activities(@activities)
      %hr.soften

    = render 'layouts/graphs'
    %hr.soften

    = render 'users/all_users' if current_user == @user
