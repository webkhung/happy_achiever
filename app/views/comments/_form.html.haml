= simple_form_for [commentable, comment] do |f|
  = f.input :comment, label: false, input_html: { rows: 1, style: 'width: 90%' }
  = f.submit value: 'Submit Comment', class: 'btn btn-mini'
  - if params['controller'] == 'page'
    = hidden_field_tag :back, root_path
  - else
    = hidden_field_tag :back, params[:back]
