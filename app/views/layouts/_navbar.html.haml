.navbar
  .navbar-inner
    = link_to(icon_for(:smile, 'Happy Achiever'), root_path, :class => 'brand')
    %ul.nav
      %li{class: ('active' if request.path == '/') }
        = link_to 'Home', root_path
      %li{class: ('active' if request.path.match(/plan/)) }
        = link_to 'Goals', plans_path
      %li{class: ('active' if request.path.match(/schedules/)) }
        = link_to 'Schedule', schedules_path
    %p.navbar-text.pull-right.divider-vertical
    %p.navbar-text.pull-right
      Level #{Achievement.level[0]}
    %p.navbar-text.pull-right.divider-vertical
    %p.navbar-text.pull-right
      = pluralize(Achievement.total, 'Achievement')
    %p.navbar-text.pull-right.divider-vertical
    .pull-right
      = link_to "Quick Power Boost!", '#power_boost', class: 'btn btn-mini', data: { toggle: 'modal' }

.modal.hide.fade{ id: "power_boost" }
