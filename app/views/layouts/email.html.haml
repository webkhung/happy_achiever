!!! Strict
%html{:xmlns => 'http://www.w3.org/1999/xhtml'}
  %head
    %meta{'http-equip' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %title= @subject
    = render 'layouts/email_styles'
  %body
    %table{:cellpadding => 0, :cellspacing => 0, :border => 0, :id => :backgroundTable, :style => 'background-color: #FFFFFF'}
      %tr
        %td{ :valign => :top, style: 'color: #333333; font-size: 16px; line-height: 1.5em' }
          = yield
      %tr
        %td{ align: :center }
          %p{ style: 'color: #878787; font-size: 12px;' }
            This is an automatically generated email, please do not reply
            -#= link_to email_settings_user_url(@recipient), email_settings_user_url(@recipient)
          %p{ style: 'color: #878787; margin: 0; padding: 0; text-shadow: #ffffff 0px 1px 0px; font-size: 12px;' }
            &copy;
            = Time.now.year
            Happy Achiever All Rights Reserved
      %tr
        %td{ height: 100 }
